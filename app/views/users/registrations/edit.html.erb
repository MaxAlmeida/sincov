
<div class="container-login100">
<div class= "wrap-edit100 p-l-50 p-r-50 p-t-77 p-b-30">
<span class="login100-form-title p-b-55">
  Edite suas informações
</span>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <div class="wrap-input100 validate-input m-b-16">
    <%= f.input :name, required: true, wrapper: false, input_html: { class: "input100" }, label: false %>
    <span class="focus-input100"></span>
    <span class="symbol-input100">
      <span class="lnr lnr-user"></span>
    </span>
</div>

<div class="wrap-input100 validate-input m-b-16">
    <%= f.input :email, required: true, label: false, wrapper: false, input_html: {class: "input100"} %>
    <span class="focus-input100"></span>
    <span class="symbol-input100">
        <span class="lnr lnr-envelope"></span>
    </span>
</div>

<div class="wrap-input100 validate-input m-b-16">
    <%= f.input :telephone, required: false, label: false, placeholder: 'Telefone', input_html: { autocomplete: "telephone", class: "input100" }, wrapper: false%>
    <span class="focus-input100"></span>
    <span class="symbol-input100">
      <span class="lnr lnr-phone"></span>
  </span>
</div>

<div class="wrap-input100 validate-input m-b-16">
    <%= f.input :password, required: true, label: false, placeholder: "Nova senha", wrapper: false, required: false, input_html: { autocomplete: "new-password", class: "input100" } %>
  <span class="focus-input100"> </span>
    <span class="symbol-input100">
      <span class="lnr lnr-lock"></span>
    </span>
</div>

<div class="wrap-input100 validate-input m-b-16">
    <%= f.input :password_confirmation,
                label: false,
                required: false,
                placeholder: "Confirmação da nova senha",
                input_html: { autocomplete: "new-password", class: "input100" } %>
 <span class="focus-input100"> </span>
  <span class="symbol-input100">
     <span class="lnr lnr-lock"></span>
  </span>
</div>

<div class="col wrap-input100 validate-input m-b-16">
<%= f.input :current_password,
                placeholder: "Senha atual", label:false,
                required: true,input_html: { autocomplete: "current-password", :class => "input100" } %>
 <span class="focus-input100"> </span>
  <span class="symbol-input100">
    <span class="lnr lnr-lock"></span>
   </span>
</div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
</div>
</div>
