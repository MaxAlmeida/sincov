<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
        <span class="login100-form-title p-b-55">
          Login
        </span>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: "login100-form validate-form", id: "sign_in_user"}, remote: true) do |f| %>
<div id="signin_error">
</div>


  <div class="wrap-input100 validate-input m-b-16" >
    <%= f.input :email, required: false, label: false, placeholder: 'Email', input_html: {:class => "input100"}, wrapper:false %>
    <span class="focus-input100"></span>
    <span class="symbol-input100">
    <span class="lnr lnr-envelope"></span>
  </span>
</div>

<div class="wrap-input100 validate-input m-b-16" data-validate = "Password is required">
    <%= f.input :password, required: false, label:false, placeholder: 'Senha', input_html: {:class => "input100" }, wrapper:false %>
      <span class="focus-input100"> </span>
      <span class="symbol-input100">
    <span class="lnr lnr-lock"></span>
  </span>
</div>

<div class="contact100-form-checkbox m-l-4">
  <%= f.input :remember_me, label:false, input_html: {id: "ckb1", class: "input-checkbox100"}, wrapper:false, as: :boolean if devise_mapping.rememberable? %>
  <label class="label-checkbox100" for="ckb1">
    Remember me
  </label>
</div>

<div class="container-login100-form-btn p-t-25">
  <%= f.button :submit, "Login", class: "login100-form-btn", id: "sign_in_button" %>
</div>

<div class="text-center w-full p-t-42 p-b-22">
  <span class="txt1">
    Ou logue-se com
  </span>
</div>

<a href="#" class="btn-face m-b-10">
  <i class="fa fa-facebook-official"></i>
  Facebook
</a>

<a href="#" class="btn-google m-b-10">
  <%= image_tag("icon-google.png", :alt=> "GOOGLE") %>
  Google
</a>


<div class="container">
  <div class="row">
    <div class="text-center col p-t-45 p-b-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<% end %>
</div>
</div>
</div>
</div>
</div>
